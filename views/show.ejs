<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>微分享</title>
    <link rel='stylesheet' href='/stylesheets/show.css' />
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#like').click(function(){
                if ($(this).attr("disabled") == "disabled") return;
                var url = document.URL.replace('messages', 'like');
                var _this = this;
                $.get(url, function(success){
                    if (success === 'success') {
                        $(_this).attr("disabled", "disabled");
                        var num = parseInt($(_this).next().text());
                        $(_this).next().text(++num);
                    };
                })
            })

            $('#fuck').click(function(){
                if ($(this).attr("disabled") == "disabled") return;
            })
        })
    </script>
</head>

  <body>
    <div class="ui-title">
        <h3 id="activity-name"><%= title %></h3>
        <span><%= _id.getTimestamp().toMyformat() %></span>
    </div>
    <div class="ui-content">
        <div class="ui-pic"><img src="<%= picUrl %>"></div>
        <div class="ui-button-pannel">
            <a id="like" href="javascript:;" class="ui-button like" <%= likeDisabled %> >Like</a>
            <span><%= likes.length %></span>
        </div>
        <div class="ui-button-pannel">
            <a id="fuck" href="javascript:;" class="ui-button fuck" <%= fuckDisabled %> >Fuck</a>
            <span><%= fucks.length %></span>
        </div>
    </div>
  </body>
</html>